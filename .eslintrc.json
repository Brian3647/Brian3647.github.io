{
	"env": {
		"es2021": true,
		"browser": true
	},
	"extends": ["eslint:recommended", "plugin:@typescript-eslint/recommended"],
	"parser": "@typescript-eslint/parser",
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
	"plugins": ["@typescript-eslint"],
	"rules": {
		"quotes": ["error", "single"],
		"semi": ["error", "always"]
	},
	"ignorePatterns": ["dist", "example"]
}
